<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :order %>
    <%= f.input :suborder %>
    <%= f.input :response_type, collection: @response_types, include_blank: false %>
    <%= f.input :survey_id, collection: @surveys, include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
